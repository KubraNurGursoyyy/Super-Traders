import { time } from 'console';
import { TIME } from 'sequelize';
import Model from '../../../database/models';
import { errorHandling } from '../errorHandling';
const httpStatus = require('http-status');

const createLog = async (description, type, res) => {
        try {
            const ob = await Model.logs.create({
                description: description,
                type: type,
                date:  Date.now(),
                time:  new Date().getTime()
            });
            return res.status(httpStatus.CREATED).send('Success');

        } catch (error) {
            return res.status(httpStatus.INTERNAL_SERVER_ERROR).json(errorHandling(error));
        }
}


module.exports = {
    createLog
};
